{
  "item_title": "btp_request",
  "id_field": "btp_requestId",
  "item_lookup_field": "btp_requestId",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "resource_methods": [
    "POST",
    "GET"
  ],
  "item_methods": [
    "GET",
    "DELETE"
  ],
  "schema": {
    "btp_requestId": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true,
      "unique": true
    },
    "timestamp": {
      "type": "datetime",
      "required": true
    },
    "date_of_delivery": {
      "type": "datetime",
      "required": true
    },
    "aggregator_id": {
			"type": "string",
			"required": true
		},
    "bid_source": {
      "type": "string",
      "allowed": [
        "automatic",
        "manual"
      ],
      "required": true
    },
    "bid_data": {
      "type": "list",
      "required": true,
      "schema": {
        "type": "dict",
        "schema": {
          "timestamp": {
            "type": "datetime",
            "required": true
          },
          "upwards_flex": {
            "type": "float",
            "required": true
          },
          "upwards_price": {
            "type": "float",
            "required": true
          },
          "downwards_flex": {
            "type": "float",
            "required": true
          },
          "downwards_price": {
            "type": "float",
            "required": true
          }          
        }
      }
    }
  }
}