{
  "item_title": "dr_campaign_baseline",
  "item_lookup_field": "dr_campaign_id",
  "item_url": "regex(\"[a-zA-Z0-9-]+\")",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "resource_methods": [
    "POST",
    "GET"
  ],
  "item_methods": [    
    "GET",
	"DELETE"
  ],
  "schema": {
    "dr_campaign_id": {
		"type": "uuid",
		"minlength": 36,
		"maxlength": 36,
		"required": true
    },
	"start": {
		"type": "datetime",
		"required": true
	},
	"end": {
		"type": "datetime",
		"required": true
	},
	"flexibility": {
      "type": "float",
      "required": true
    },
	"ldems": {
		"type": "list",
		"schema": {
			"type": "dict",
			"schema":{
				"ldems_id": {"type": "uuid"}
			}
		},
		"required": false
	},
	"backup_ldems": {
		"type": "list",
		"items": [{"type": "uuid"}],
		"required": false
	}	
  }
}