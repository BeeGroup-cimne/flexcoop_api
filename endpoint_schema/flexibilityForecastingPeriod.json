{
  "item_title": "flexibilityForecastingPeriod",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "resource_methods": [
    "GET",
    "POST"
  ],
  "schema": {
    "venId": {
      "type": "string",
      "minlength": 1,
      "maxlength": 100,
      "required": true,
      "unique": true
    },
    "derDevice": {
      "type": "string",
      "allowed": [
        "Light",
        "HVAC",
        "DHW",
        "EV"
      ]
    },
    "deviceId": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "horizon": {
      "type": "integer"
    },
    "horizonType": {
      "type": "string"
    },
    "isp": {
      "type": "integer"
    },
    "ispType": {
      "type": "list",
      "allowed": [
        "minutes",
        "hours"
      ]
    }
  }
}


