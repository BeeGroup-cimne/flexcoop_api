{
  "item_title": "local_optimization",
  "id_field": "local_optimizationId",
  "item_lookup_field": "local_optimizationId",
  "item_url": "regex(\"[a-zA-Z0-9-]+\")",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "aggregation": {
		"index_field": "start",
		"aggregate_fields": {
			"gridPower": "SUM",
			"pvPower": "SUM"
		},
		"groupby": "device_id",
		"add_fields": [
			"account_id",
			"aggregator_id",
			"device_id"
		]
	},
  "resource_methods": [
    "POST",
    "GET"
  ],
  "item_methods": [
    "GET",
    "DELETE"
  ],
  "schema": {
    "local_optimizationId": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "account_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "aggregator_id": {
      "type": "string",
      "minlength": 3,
      "maxlength": 256,
      "required": true
    },
    "device_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "timestamp": {
			"type": "datetime",
			"required": true
    },
    "start": {
			"type": "datetime",
			"required": true
    },
    "setpoint": {
			"type": "float",
			"required": true
    },
    "mode": {
      "type": "string",
      "allowed": [
          "1",
          "2",
          "3",
          "4",
          "5"
        ],
        "required": true
    },
    "gridPower": {
			"type": "float",
			"required": true
    },
    "pvPower": {
			"type": "float",
			"required": true
    },
    "gridPowerPrice": {
      "type": "float"
    }
  }
}








