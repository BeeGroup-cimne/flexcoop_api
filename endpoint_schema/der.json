{
  "item_title": "der",
  "id_field": "device_id",
  "item_lookup_field": "device_id",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "item_url": "regex(\"[a-f0-9]{8}-?[a-f0-9]{4}-?4[a-f0-9]{3}-?[89ab][a-f0-9]{3}-?[a-f0-9]{12}\")",
  "resource_methods": [
    "GET",
    "POST",
    "DELETE"
  ],
  "item_methods": [
    "GET",
    "PATCH",
    "PUT",
    "DELETE"
  ],
  "schema": {
    "device_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "status": {
      "type": "string",
      "regex": "^(on|off)$",
      "required": true
    },
    "availability": {
      "type": "string",
      "regex": "^(yes|no)$",
      "required": true
    },
    "location": {
      "type": "string",
      "minlength": 1,
      "maxlength": 36,
      "required": true
    },
    "osb_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "account_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "openadr_id": {
      "type": "string",
      "minlength": 29,
      "maxlength": 29,
      "regex": "^([0-9a-fA-F][0-9a-fA-F]:){9}([0-9a-fA-F][0-9a-fA-F])$"
    },
    "device_type": {
      "type": "string",
      "regex": "^(Demand|Generation|Storage)$",
      "required": true
    },
    "max_capacity": {
      "type": "float",
      "required": true
    },
    "available_capacity": {
      "type": "float",
      "required": true
    },
    "cluster_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "cluster_type": {
      "type": "string",
      "regex": "^(Cluster|TBD)$",
      "required": true
    },
    "device_class": {
      "type": "string",
      "regex": "^(HVAC|Lights|DHW|PV|EV)$"
    },
    "vpp_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    }
  }
}








