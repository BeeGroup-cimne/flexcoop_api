{
  "item_title": "meter",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "aggregation":{
    "index_field" : "timestamp",
    "aggregate_fields" : {
      "current": "AVG",
      "kwh": "SUM",
      "voltage": "AVG",
      "watts": "AVG"
    },
    "groupby": "device_id",
    "add_fields": ["account_id", "aggregator_id", "device_id", "device_class"]
  },
  "resource_methods": [
    "GET"
  ],
  "item_methods": [],
  "schema": {
    "device_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true,
      "unique": true
    },
    "account_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "aggregator_id": {
      "type": "string",
      "minlength": 3,
      "maxlength": 256,
      "required": true
    },
    "device_class": {
      "type": "string",
      "allowed": [
        "sensingDevice",
        "hvacDevice",
        "dhwDevice",
        "prosumerDeviceMetering",
        "pvDevice",
        "otherLoad",
        "spaceTotalMetering"
      ],
      "required": true
    },
    "timestamp": {
      "type": "datetime",
      "required": true
    },
    "current" : {
      "type": "float"
    },
    "kwh":  {
      "type": "float"
    },
    "voltage": {
      "type": "float"
    },
    "watts": {
      "type": "float"
    }
  }
}