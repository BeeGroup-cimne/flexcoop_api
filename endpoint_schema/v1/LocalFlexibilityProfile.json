{
  "item_title": "LocalFlexibilityProfile",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "resource_methods": [
    "GET",
    "POST"
  ],
  "schema": {
    "OSBid": {
      "type": "string",
      "minlength": 1,
      "maxlength": 100,
      "required": true,
      "unique": true
    },
    "DERid": {
      "type": "string",
      "minlength": 1,
      "maxlength": 100,
      "required": true,
      "unique": true
    },
    "DERDevice": {
      "type": "list",
      "allowed": [
        "Light",
        "HVAC",
        "DHW",
        "EV"
      ]
    },
    "Flexibility": {
      "type": "dict",
      "schema": {
        "baseline": {
          "type": "float"
        },
        "upwards": {
          "type": "float"
        },
        "flexibility": {
          "type": "float"
        },
        "interval": {
          "type": "integer"
        }
      }
    }
  }
}
