{
  "item_title": "data_points",
  "id_field": "device_id",
  "item_lookup_field": "device_id",
  "item_url": "regex(\"[a-zA-Z0-9-]+\")",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "resource_methods": [
    "GET"
  ],
  "item_methods": [
    "GET"
  ],
  "schema": {
    "device_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true,
      "unique": true
    },
    "account_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "ven_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "aggregator_id": {
      "type": "string",
      "minlength": 3,
      "maxlength": 256,
      "required": true
    },
    "device_class": {
      "type": "string",
      "allowed": [
        "sensingDevice",
        "hvacDevice",
        "dhwDevice",
        "prosumerDeviceMetering",
        "pvDevice",
        "otherLoad",
        "spaceTotalMetering"
      ],
      "required": true
    },
    "reporting_metrics":{
      "type": "list",
      "allowed": [
        "ambient_temperature",
        "sensor_temperature",
        "temperature",
        "lux",
        "sensor_luminance",
        "sensor_relhumidity",
        "humidity",
        "airquality",
        "tvoc",
        "alarm_motion",
        "motion",
        "meter_current",
        "meter_kwh",
        "meter_voltage",
        "meter_watts"
      ]
    }
  }
}









