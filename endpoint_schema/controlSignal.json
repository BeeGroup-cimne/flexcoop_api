{
	"item_title": "controlSignal",
	"item_lookup_field": "dr_campaign_id",
	"item_url": "regex(\"[a-zA-Z0-9-]+\")",
	"cache_control": "max-age=10,must-revalidate",
	"cache_expires": 10,
	"resource_methods": [
		"POST",
		"GET"
	],
	"item_methods": [    
		"GET",
		"DELETE"
	],
	"schema": {
		"timestamp": {
			"required": true,
			"type": "datetime",			
		},		
		"dr_campaign_id": {
			"type": "uuid",
			"minlength": 36,
			"maxlength": 36,
			"required": true
		},
		"account_id": {
			"type": "uuid",
			"minlength": 36,
			"maxlength": 36,
			"required": true
		},
		"device_id": {
			"type": "uuid",
			"minlength": 36,
			"maxlength": 36,
			"required": true,
			"unique": true
		},
		"device_class": {
			"type": "string",
			"allowed": [
				"hvacDevice",
				"lightingLoad",
				"dhwDevice",
				"otherLoad"
			],
			"required": true
		},	
		"flex": {
			"type": "float"
		}
	}
}