{
  "item_title": "occupancy",
  "cache_control": "max-age=10,must-revalidate",
  "cache_expires": 10,
  "resource_methods": [
    "GET"
  ],
  "aggregation":{
    "index_field" : "timestamp",
    "aggregate_fields" : {
      "occupancy": "AVG"
    },
    "groupby": "device_id",
    "add_fields": ["account_id", "aggregator_id", "device_id", "device_class"]
  },
  "item_methods": [],
  "schema": {
    "device_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true,
      "unique": true
    },
    "account_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "aggregator_id": {
      "type": "string",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
    "device_class": {
      "type": "string",
      "allowed": [
        "sensingDevice",
        "hvacDevice",
        "dhwDevice",
        "prosumerDeviceMetering",
        "pvDevice",
        "otherLoad",
        "spaceTotalMetering"
      ],
      "required": true
    },
    "timestamp": {
      "type": "datetime",
      "required": true
    },
    "occupancy" : {
      "type": "float"
    }
  }
}