{
	"item_title": "dr_event_ldem_baseline",
	"id_field": "dr_event_id",
	"item_lookup_field": "dr_campaign_id",
	"item_url": "regex(\"[a-zA-Z0-9-]+\")",
	"cache_control": "max-age=10,must-revalidate",
	"cache_expires": 10,
	"aggregation": {
		"index_field": "start",
		"aggregate_fields": {
			"flexibility": "SUM",
			"forecast_cons": "SUM",
			"real_cons": "SUM"
		},
		"groupby": "ldem_id",
		"add_fields": [
			"dr_campaign_id",
			"aggregator_id",
			"account_id",
			"ldem_id"		,
			"contract_id",
			"contract_name"
		]
	},
	"resource_methods": [
		"POST",
		"GET"
	],
	"item_methods": [    
		"GET",
		"DELETE",
		"PATCH"
	],
	"schema": {
		"dr_event_id": {
      "type": "uuid",
      "minlength": 36,
      "maxlength": 36,
      "required": true
    },
		"dr_campaign_id": {
			"type": "uuid",
			"minlength": 36,
			"maxlength": 36,
			"required": true
		},
		"aggregator_id": {
			"type": "string",
			"required": true
		},
		"account_id": {
			"type": "uuid",
			"minlength": 36,
			"maxlength": 36,
			"required": true
		},
		"ldem_id": {
			"type": "uuid",
			"minlength": 36,
			"maxlength": 36,
			"required": true
		},
		"start": {
			"type": "datetime",
			"required": true
		},
		"end": {
			"type": "datetime",
			"required": true
		},
		"contract_id": {
			"type": "uuid"
		},
		"contract_name": {
			"type": "string"
		},
		"flexibility": {
			"type": "float",
			"required": true
		},
		"forecast_cons": {
			"type": "float"
		},
		"real_cons": {
			"type": "float"
		},
		"devices": {
			"type": "list",
			"schema": {
				"type": "dict",
				"schema": {
					"deviceId": {
						"type": "uuid",
						"minlength": 36,
						"maxlength": 36,
						"required": true
					},
					"consumption_modification": {
						"type": "float",            
						"required": true
					},
					"consumption_forecast": {
						"type": "float",            
						"required": true
					},
					"real_cons": {
						"type": "float"
					},
					"account_id": {
						"type": "uuid",
						"minlength": 36,
						"maxlength": 36,
						"required": true
					},
					"device_class": {
						"type": "string",
						"allowed": [
							"hvacDevice",
							"lightingLoad",
							"dhwDevice",
							"otherLoad"
						],
						"required": true
					}
				}
			}
		}
	}
}